<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E8ECD7"> <!-- Updated background color -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Module input fields container -->
        <LinearLayout
            android:id="@+id/linearLayoutModules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- Buttons container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Add Module button -->
            <Button
                android:id="@+id/btnAddModule"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Add Module"
                android:background="@drawable/otherbutton"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"/>

            <!-- Calculate GPA button -->
            <Button
                android:id="@+id/btnCalculateGPA"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Calculate GPA"
                android:background="@drawable/otherbutton"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"/>

            <!-- Reset button -->
            <Button
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Reset"
                android:background="@drawable/button_background"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Result TextView -->
        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total GPA: "
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />
    </LinearLayout>

</ScrollView>
